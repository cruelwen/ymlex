#!/usr/bin/env ruby

home = File.join(File.dirname(__FILE__),'..')
$LOAD_PATH.unshift(File.join(home,'lib'))

require 'ymlex'

`rm -rf ./output`
inputFile, tptDir = ARGV
Ymlex.initTptDir tptDir if tptDir
ags = ArgusYml.new inputFile
ags.dump_json "./output"
puts ags.info_yml.to_yaml
puts "======"
puts JSON.pretty_generate ags.instance
